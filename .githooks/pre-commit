#! /opt/homebrew/bin/python3.9

import os
import subprocess

def main() -> None:

    print("")

    print("<Preparing For commit>")

    print("\t<Running Automatic Code Formatter Over Repo>")

    baseDir = os.getcwd()
    os.chdir(os.path.join(baseDir, "src"))
    srcDir = os.getcwd()
    for dir in (f for f in os.listdir()):
        if dir.find(".") != -1:
            continue
        else:
            os.chdir(os.path.join(srcDir, dir))
            for file in (f for f in os.listdir()):
                if file.find(".") == -1:
                    continue
                else:
                    subprocess.run(["clang-format", "-style=google", "-i", file])

    print("\t</Complete>")

    print("\t<Adding Changes>")
    subprocess.run(["git", "add", "."])
    print("\t</Adding Changes>")

    print("\t<Commiting Changes>")
    subprocess.run(["git", "commit", "--no-verify", "-m\"Adding Auto-Formatter Changes\""])
    print("\t</Commiting Changes>")
    
    print("</committing>\n")



main()